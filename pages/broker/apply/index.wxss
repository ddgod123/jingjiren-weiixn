.broker-apply {
  min-height: 100vh;
  background-color: #f5f5f5;
}

.apply-content {
  padding: 0 32rpx 32rpx;
}

/* 申请说明样式 */
.apply-notice {
  margin-bottom: 32rpx;
}

.notice-title {
  display: flex;
  align-items: center;
  gap: 16rpx;
}

.notice-text {
  font-size: 32rpx;
  font-weight: 500;
  color: #0052D9;
}

.notice-content {
  margin-top: 16rpx;
  font-size: 28rpx;
  color: #666;
  line-height: 1.6;
}

/* 表单样式 */
.apply-form {
  margin-bottom: 64rpx;
}

.picker-value {
  color: #333;
  text-align: right;
}

.picker-value:empty::before {
  content: attr(placeholder);
  color: #ccc;
}

/* 提交按钮区域 */
.submit-section {
  position: fixed;
  bottom: 0;
  left: 0;
  right: 0;
  padding: 32rpx;
  background-color: #fff;
  border-top: 2rpx solid #f0f0f0;
  z-index: 100;
}

.submit-section .t-button {
  border-radius: 12rpx;
}

.submit-buttons {
  display: flex;
  justify-content: flex-end;
}

.submit-btn {
  width: 240rpx !important;
}

/* 页面底部留白 */
.apply-content {
  padding-bottom: 120rpx;
}

/* 表单组标题样式 */
.t-cell-group__title {
  font-size: 32rpx;
  font-weight: 500;
  color: #333;
}

/* 输入框样式优化 */
.t-input {
  text-align: right;
}

.t-textarea {
  text-align: left;
  margin-top: 16rpx;
}

/* 必填标识 */
.t-cell[required] .t-cell__title::after {
  content: '*';
  color: #e34d59;
  margin-left: 8rpx;
}

/* 二级选择器样式 */
.building-selector {
  height: 70vh;
  display: flex;
  flex-direction: column;
  background: #fff;
}

.selector-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 32rpx;
  border-bottom: 1rpx solid #e7e7e7;
}

.selector-title {
  font-size: 36rpx;
  font-weight: 600;
  color: #222;
}

.selector-content {
  flex: 1;
  display: flex;
  overflow: hidden;
}

/* 左侧区域列表 */
.district-list {
  width: 240rpx;
  background: #f8f8f8;
  overflow-y: auto;
}

.district-item {
  padding: 24rpx 20rpx;
  border-bottom: 1rpx solid #f0f0f0;
  display: flex;
  flex-direction: column;
  align-items: center;
  position: relative;
}

.district-item.active {
  background: #fff;
  color: #0052d9;
}

.district-item.active::before {
  content: '';
  position: absolute;
  left: 0;
  top: 0;
  bottom: 0;
  width: 6rpx;
  background: #0052d9;
}

.district-name {
  font-size: 28rpx;
  font-weight: 500;
  margin-bottom: 8rpx;
}

.building-count {
  font-size: 24rpx;
  color: #999;
}

/* 右侧楼盘列表 */
.building-list {
  flex: 1;
  overflow-y: auto;
  padding: 0 20rpx;
}

.building-item {
  padding: 32rpx 20rpx;
  border-bottom: 1rpx solid #f0f0f0;
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.building-item.selected {
  background: #f0f7ff;
}

.building-info {
  flex: 1;
  display: flex;
  flex-direction: column;
}

.building-name {
  font-size: 32rpx;
  font-weight: 500;
  color: #222;
  margin-bottom: 8rpx;
}

.building-address {
  font-size: 28rpx;
  color: #666;
}

/* 底部按钮区域 */
.selector-footer {
  padding: 32rpx;
  border-top: 1rpx solid #e7e7e7;
  display: flex;
  gap: 24rpx;
}

.cancel-btn {
  flex: 1;
}

.confirm-btn {
  flex: 2;
}

/* 加载状态 */
.t-button[loading] {
  opacity: 0.6;
}

/* 响应式适配 */
@media (max-width: 375px) {
  .apply-content {
    padding: 0 24rpx 24rpx;
  }
  
  .submit-section {
    padding: 24rpx;
  }
}

/* 深色模式适配 */
@media (prefers-color-scheme: dark) {
  .broker-apply {
    background-color: #1a1a1a;
  }
  
  .notice-content {
    color: #999;
  }
  
  .submit-section {
    background-color: #2a2a2a;
    border-top-color: #333;
  }
}
